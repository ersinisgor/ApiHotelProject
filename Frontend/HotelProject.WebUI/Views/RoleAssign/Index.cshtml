@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@* Role Assign Index Page *@
<h1>User List</h1>

@if (Model != null && Model.Any())
{
	<table class="table table-xs mb-0">
		<thead>
			<tr>

				<th>User</th>
				<th>Role Assign</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
					<td><a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-warning">Role Assign</a></td>
				</tr>
			}

		</tbody>
	</table>


}
else
{
	<p>No users found.</p>
}