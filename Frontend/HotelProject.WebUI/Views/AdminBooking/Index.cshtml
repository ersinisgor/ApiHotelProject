@model List<HotelProject.WebUI.Dtos.BookingDto.ResultBookingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}


<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<div class="card-title">
				<h4>Bookings</h4>
			</div>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Customer</th>
							<th>CheckIn</th>
							<th>CheckOut</th>
							<th>Status</th>
							<th>Transactions</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{
							count++;
							<tr>
								<th>@count</th>
								<td>@item.Name</td>
								<td>@(((DateTime)item.CheckIn).ToString("dd-MM-yyyy"))</td>
								<td>@(((DateTime)item.CheckOut).ToString("dd-MM-yyyy"))</td>
								@if(item.Status == "Approved")
								{
									<td>
										<span class="badge badge-success px-2">@item.Status</span>
									</td>
								}
								else if (item.Status == "Customer will be called")
								{
									<td>
										<span class="badge badge-warning px-2">@item.Status</span>
									</td>
								}
								else if (item.Status == "Cancelled")
								{
									<td>
										<span class="badge badge-danger px-2">@item.Status</span>
									</td>
								}
								else
								{
									<td>
										<span class="badge badge-primary px-2">@item.Status</span>
									</td>
								}
			
								<td>
									<a href="/AdminBooking/ApprovedReservation2/@item.BookingID" class="btn btn-outline-primary">Approve</a>
									<a href="#" class="btn btn-outline-danger">Cancel</a>
									<a href="#" class="btn btn-outline-primary">Hold</a>
									<a href="#" class="btn btn-outline-info">Update</a>
									<a href="#" class="btn btn-outline-dark">Details</a>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

