@model List<HotelProject.WebUI.Dtos.GuestDto.ResultGuestDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

@* Guest Index Page *@

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Name</th>
		<th>Surname</th>
		<th>City</th>
		<th>Delete</th>
		<th>Edit</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>@item.Name</td>
			<td>@item.Surname</td>
			<td>@item.City</td>
			<td><a href="/Guest/DeleteGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a></td>
			<td><a href="/Guest/UpdateGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-outline-success">Edit</a></td>
			<td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Details</a></td>
		</tr>
	}
</table>
<a href="/Guest/AddGuest/" class="btn mb-1 btn-rounded btn-outline-info">Add New Guest</a>



