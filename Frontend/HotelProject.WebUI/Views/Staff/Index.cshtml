@model List<HotelProject.WebUI.Models.Staff.StaffViewModel>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Staff Name</th>
		<th>Staff Title</th>
		<th>Delete</th>
		<th>Edit</th>
		<th>Details</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.StaffID</th>
			<td>@item.Name</td>
			<td>@item.Title</td>
			<td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a></td>
			<td><a href="/Staff/UpdateStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-success">Edit</a></td>
			<td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Details</a></td>
		</tr>
	}
</table>
<a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded btn-outline-info">Add New Staff</a>

